$TTL	604800
{{ ptr_domain_name }}.	IN	SOA	vm1.{{ domain_name }}. ssaart.{{ domain_name }}. (
			      20	; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL

	IN	NS	{{ groups['dns_master'][0] }}.{{ domain_name }}.

$ORIGIN {{ ptr_domain_name }}.

{% for vm in hostvars %}
{{ hostvars[vm]['ansible_default_ipv4']['address'].split('.')[-1] }}	IN	PTR	{{ vm }}.{{ domain_name }}
{% endfor %}
